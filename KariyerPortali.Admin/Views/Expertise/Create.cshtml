@model KariyerPortali.Admin.ViewModels.ExpertiseViewModel
@{
    ViewBag.Title = "Create";
}
<!DOCTYPE html>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Expertise")" class="nav-link ">Uzmanlıklar</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Yeni Uzmanlık</span>
        </li>
    </ul>

</div>

<div class="row">
    <div class="col-md-12 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered" style="width:300px;">
            <div class="portlet-title">
                <h1 class="page-title">
                    Yeni Uzmanlık Ekleme
                </h1>

            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="row">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="actions">
                </div>

                <div class="portlet-body form">


                    <form role="form">
                        <div class="form-body">
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                                Uzmanlık Adı
                                            @Html.EditorFor(model => model.ExpertiseName, new { htmlAttributes = new { @tabindex = "1", @class = "form-control spinner" } })
                                            @Html.ValidationMessageFor(model => model.ExpertiseName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn blue">Ekle</button>
                                <button type="button" class="btn default" onclick="window.location='@Url.Action("Index","Epertise")';">İptal</button>
                            </div>


                        </div>
                    </form>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}




