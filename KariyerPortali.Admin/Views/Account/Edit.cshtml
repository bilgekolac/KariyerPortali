@model KariyerPortali.Admin.Models.ApplicationUser
@{
    ViewBag.Title = "Edit";
}
<br />
<!-- BEGIN SAMPLE FORM PORTLET-->
@using (Html.BeginForm("Edit", "Account", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{ 
    @Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Kullanıcı Düzenle </span>
                    @Html.HiddenFor(model => model.UserName)
                </div>
                <div class="actions">
                </div>
            </div>
            <div class="portlet-body form">
                <form role="form">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Kullanıcı Adı</label>
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                        @*<input class="form-control spinner" type="text" placeholder="Kullanıcı Adı" />*@
                                    </div>
                                    <div class="form-group">
                                        <label>Ad</label>
                                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                        @*<input class="form-control spinner" type="text" placeholder="Ad" />*@
                                    </div>
                                    <div class="form-group">
                                        <label>Soyad</label>
                                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                        @*<input class="form-control spinner" type="text" placeholder="Soyad" />*@
                                    </div>
                                    <div class="form-group">
                                        <label>E Posta</label>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @*<input class="form-control spinner" type="text" placeholder="E Posta" />*@
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Telefon</label>
                                        @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                                        @*<input class="form-control spinner" type="text" placeholder="Telefon" />*@
                                    </div>
                                    <div class="form-group">
                                        <label>Doğum Tarihi</label>
                                        @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control" } })
                                        @*<input class="form-control spinner" size="16" type="date" value="" />*@
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputFile1">Resim Seçin</label>
                                        <input type="file" id="exampleInputFile1" name="file">
                                        @TempData["result"]
                                        @*<p class="help-block"> some help text here. </p>*@
                                    </div>
                                    <div class="form-group">
                                        
                                        <img src="..." width="200" height="200" alt="Kişi Resmi" title="Kişi Resmi" />
                                    </div>
                                    <label>Durum</label>
                                    <div class="form-group">
                                        <label class="mt-checkbox mt-checkbox-outline">
                                            <input type="checkbox" value="1" name="test" />
                                            <span></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions right">
                                <button type="submit" class="btn blue">Kaydet</button>
                                @*<button type="button" class="btn default">İptal</button>*@
                                <a href="/Account/Index" id="sample_editable_1_new" class="btn default">
                                    İptal                                  
                                </a>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
}
<!-- END SAMPLE FORM PORTLET-->