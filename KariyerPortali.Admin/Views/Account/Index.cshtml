@model IEnumerable<KariyerPortali.Admin.Controllers.UserViewModel>

@{
    ViewBag.Title = "Tüm Kullanıcılar";
}
<link href="/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />


<br />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/Account">Kullanıcılar</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Tüm Kullanıcılar </span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />



<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <h1 class="page-title">
                    Tüm Kullanıcılar
                </h1>
            </div>

            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="/Account/Register" id="sample_editable_1_new" class="btn sbold green">
                                    Kullanıcı Ekle
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <button class="btn green  btn-outline dropdown-toggle" data-toggle="dropdown">
                                    Araçlar
                                    <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-print"></i> Yazdır
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-file-pdf-o"></i> PDF Olarak Kaydet
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-file-excel-o"></i> Excel'e Aktar
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-striped table-bordered table-hover table-checkable order-column" id="allCandidateTable">
                <thead>
                    
                    <tr>
                        <th>
                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                <input type="checkbox" class="group-checkable" data-set="#allCandidateTable .checkboxes" />
                                <span></span>
                            </label>
                        </th>

                        <th> @Html.DisplayNameFor(model=>model.UserName) </th>
                        <th> @Html.DisplayNameFor(model=>model.FirstName)</th>
                        <th> @Html.DisplayNameFor(model => model.LastName) </th>
                        <th> @Html.DisplayNameFor(model => model.Title) </th>
                        <th> @Html.DisplayNameFor(model => model.RoleNames) </th>
                        <th> @Html.DisplayNameFor(model=>model.CreatedDate) </th>
                        <th> Eylemler </th>
                    </tr>
                </thead>
                <tbody>
@foreach (var item in Model){
                    <tr class="odd gradeX">
                        <td>
                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                <input type="checkbox" class="checkboxes" value="1" />
                                <span></span>
                            </label>
                        </td>
                        <td> @Html.DisplayFor(modelItem=>item.UserName) </td>
                        <td> @Html.DisplayFor(modelItem => item.FirstName)</td>
                        <td> @Html.DisplayFor(modelItem => item.LastName)</td>
                        <td> @Html.DisplayFor(modelItem => item.Title)</td>
                        <td> @Html.DisplayFor(modelItem => item.RoleNames)</td>
                        <td> @item.CreatedDate.ToShortDateString()</td>
                        <td>
                            
                        </td>
                    </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>
</div>
@section footer {
    <script src="/assets/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="/Scripts/pages/user-index.js"></script>
    <script>
        $(document).ready(function () {
            initTable1();
        });
    </script>
}
