@model IEnumerable<KariyerPortali.Admin.ViewModels.SettingViewModel>
@{
    ViewBag.Title = "Contact";
}
<style>
    .theme-option > textarea {
        width: 500px;
    }
</style>
<link href="/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Contact", "Settings")" class="nav-link">İletişim Bilgileri</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Genel Ayarlar</span>
        </li>
    </ul>
</div>

<div class="row">
    <div class="col-md-12">
        <!-- BEGIN PROFILE SIDEBAR -->
        <div class="profile-sidebar">
            <!-- PORTLET MAIN -->
            <div class="portlet light profile-sidebar-portlet ">
                <div class="theme-panel">
                    <h1 class="page-title">
                        Genel Ayarlar
                    </h1>
                    @using (Html.BeginForm("Contact", "Settings", null, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-body">
                            <div class="form-group">
                                <div class="theme-option">
                                    <span> Adres:</span><br />
                                    <textarea name="Adres">@Model.FirstOrDefault(m => m.Name == "Adres").Value</textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="theme-option">
                                    <span> İletişim:</span><br />
                                    <textarea name="Iletisim">@Model.FirstOrDefault(m => m.Name == "Iletisim").Value</textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="theme-option">
                                    <span>  Websayfası:</span><br />
                                    <textarea name="Websayfa">@Model.FirstOrDefault(m => m.Name == "Websayfa").Value</textarea>
                                    <div>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn blue" onclick='alert("Ayarlarınız Kaydedildi")'>Kaydet</button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
