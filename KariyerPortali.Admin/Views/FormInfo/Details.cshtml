@model KariyerPortali.Admin.ViewModels.FormInfoViewModel
<!DOCTYPE html>
<meta charset="utf-8" />
<title>@ViewBag.Title-Kariyer Portalı</title>
<br />
<style>
    textarea {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Form")">Formlar</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Form Sorusu Detayı</span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Form Sorusu Detayı</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                    <div class="col-md-12 ">
                        <!-- BEGIN SAMPLE FORM PORTLET-->
                        <div class="portlet light bordered">

                            <!--İLAN VERİLİŞ TARİHİ O AN ALINACAK-->



                            <div class="portlet-body form">

                                <div class="form-body">
                                    <div class="form-group">
                                        @Html.DisplayFor(model => model.FormInfoDescription)
                                    </div>
                                    <div class="form-group">
                                        @Html.DisplayFor(model => model.FormType)
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.DisplayFor(model => model.Value)
                                </div>
                                <div class="form-group">
                                </div>
                            </div>
                        </div>
                    </div>
                        <input type="submit" value="Ekle" />
                        <!-- END SAMPLE FORM PORTLET-->
                        <!-- BEGIN SAMPLE FORM PORTLET-->
            </div>

        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



