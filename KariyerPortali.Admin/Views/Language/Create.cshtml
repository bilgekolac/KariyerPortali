@model KariyerPortali.Admin.ViewModels.LanguageFormViewModel
@{
    ViewBag.Title = "Create";
}
<!DOCTYPE html>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Language")" class="nav-link ">Tanımlamalar</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Yeni Kayıt</span>
        </li>
    </ul>

</div>

<div class="row">
    <div class="col-md-12 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered" style="width:300px;">
            <div class="portlet-title">
                <h1 class="page-title">
                    Yeni Dil Ekleme
                </h1>

            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="row">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="form-horizontal">
                                        <hr />
                                        <label>Dil Adı</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.LanguageName,

new { htmlAttributes = new { @tabindex = "2", @class = "form-control spinner" } })
                                                @Html.ValidationMessageFor(model =>

model.LanguageName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" tabindex="3" class="btn

blue">
                                                Gönder
                                            </button>
                                            <button type="button" tabindex="4" class="btn

default" onclick="window.location='@Url.Action("Index","Language")';">
                                                İptal
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<!-- END SAMPLE FORM PORTLET-->
