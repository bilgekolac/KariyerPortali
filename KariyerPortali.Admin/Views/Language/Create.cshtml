@model KariyerPortali.Admin.ViewModels.LanguageFormViewModel
@{
    ViewBag.Title = "Create";
}
<!DOCTYPE html>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Language")" class="nav-link ">Diller</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Dil Ekle</span>
        </li>
    </ul>

</div>

<div class="row" style="padding-top:20px">
    <div class="col-md-12 ">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="portlet light bordered" style="width:300px;">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold">DİL EKLEME</span>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">
                            <div class="form-group">
                                @Html.LabelFor(model => model.LanguageName)
                                @Html.EditorFor(model => model.LanguageName, new { htmlAttributes = new { @class = "form-control spinner" } })
                                @Html.ValidationMessageFor(model => model.LanguageName, "", new { @class = "text-danger" })
                               
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn blue">Ekle</button>
                            <button type="button" class="btn default" onclick="window.location='@Url.Action("Index","Language")';">İptal</button>
                        </div>
                    </form>
                </div>
            </div>
        }
    </div>

</div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }




