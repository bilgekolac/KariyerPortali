@model KariyerPortali.Admin.ViewModels.LanguageFormViewModel
@{
    ViewBag.Title = "Edit";
}
<!DOCTYPE html>


<link href="/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
<!-- END HEAD -->
<!-- BEGIN PAGE BAR -->

<br />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="~/Language/Index">Tüm Diller</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Düzenle</span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.LanguageId)
    </div>
</div>
<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="actions">
        </div>

        <div class="portlet-body form">


            <form role="form">
                <div class="form-body">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.LanguageName)
                                    @Html.EditorFor(model => model.LanguageName, new { htmlAttributes = new { @tabindex = "1", @class = "form-control spinner" } })
                                    @Html.ValidationMessageFor(model => model.LanguageName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-actions right">
                        <button type="submit" tabindex="2" class="btn blue">Kaydet</button>
                        <button type="button" tabindex="3" class="btn default">İptal</button>
                    </div>


                </div>
            </form>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


