                            </li>
                            <li>
                                <a>Aralık</a>
                                <span data-value="@ViewBag.JobApplicationMonth12">0</span>
                            </li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>
        <!-- END PORTLET-->
    </div>
</div>








