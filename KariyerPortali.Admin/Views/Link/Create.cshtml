@model KariyerPortali.Admin.ViewModels.LinkFormViewModel
@{
    ViewBag.Title = "Create";
}

<link href="/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/generate-slug.js"></script>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Link")" class="nav-link">Bağlantılar</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Yeni Bağlantı</span>
        </li>
    </ul>

</div>
<br />
<div class="row">
    <div class="col-md-12 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <h1 class="page-title">
                    Yeni Bağlantı
                </h1>

            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">
                            <div class="form-group">
                                @Html.LabelFor(model => model.LinkName)
                                @Html.EditorFor(model => model.LinkName, new { htmlAttributes = new { @tabindex = "3", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.LinkName, " ", new { @class = "text-danger" })
                            </div>                            
                            <div class="form-group">
                                @Html.LabelFor(model => model.Url)
                                @Html.EditorFor(model => model.Url, new { htmlAttributes = new { @tabindex = "3", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Url, " ", new { @class = "text-danger" })
                            </div>                            
                            <div class="misc-pub-section misc-pub-private">
                                <label for="link_private" class="selectit"><input id="link_private" name="link_visible" type="checkbox" value="N"> Bu bağlantı özel kalsın</label>
                            </div>

                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn blue">Ekle</button>
                            <button type="button" class="btn default" onclick="window.location='@Url.Action("Index","Link")';">İptal</button>
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>

</div>
<!-- END SAMPLE FORM PORTLET-->
<!-- BEGIN SAMPLE FORM PORTLET-->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
