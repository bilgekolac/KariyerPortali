<br />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/Category"> Kategoriler </a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span> Tüm Kategoriler </span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />



<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <h1 class="page-title">
                    Tüm Kategoriler
                </h1>
            </div>

            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="/Category/Create" id="sample_editable_1_new" class=" btn sbold green">
                                    Yeni Kategori Ekle
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <button class="btn green  btn-outline dropdown-toggle" data-toggle="dropdown">
                                    Araçlar
                                    <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-print"></i> Yazdır
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-file-pdf-o"></i> PDF Olarak Kaydet
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-file-excel-o"></i> Excel'e Aktar
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-striped table-bordered table-hover table-checkable order-column" id="allCategoryTable">
                <thead>
                    <tr>
                        <th>
                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                <input type="checkbox" class="group-checkable" data-set="#allCategoryTable .checkboxes" />
                                <span></span>
                            </label>
                        </th>
                        <th> Kategori ID</th>
                        <th> Kategori Adı </th>
                        <th> Kısa Ad </th>
                        <th> Açıklama </th>
                        <th> Eylemler </th>
                    </tr>
                </thead>
                <tbody></tbody>

            </table>
        </div>
    </div>
</div>
