<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Category")" class="nav-link">Kategoriler</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Tüm Kategoriler</span>

        </li>
    </ul>

</div>
<br />
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <h1 class="page-title">
                    Tüm Kategoriler
                </h1>

            </div>

            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">

                                <a href="/Category/Create" id="sample_editable_1_new" class=" btn sbold green">
                                    Yeni Kategori Ekle
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
                <table class="table table-striped table-bordered table-hover table-checkable order-column" id="allCategoryTable">
                    <thead>
                        <tr>
                            <th>
                                <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                    <input type="checkbox" class="group-checkable" data-set="#allCategoryTable .checkboxes" />
                                    <span></span>
                                </label>
                            </th>
                            <th>Kategori ID</th>
                            <th>Kategori Adı</th>
                            <th>Kısa Ad</th>
                            <th>Açıklama</th>
                            <th>Adet</th>                           
                            <th>Eylemler</th>

                           
                        </tr>
                    </thead>

                </table>
            </div>
            
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>
