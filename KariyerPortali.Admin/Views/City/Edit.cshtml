@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6 ">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light bordered" style="
    width: 442px;
">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">
                            ŞEHİR DÜZENLE
                        </span>
                    </div>

                </div>
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">


                            <div class="form-group">


                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.CityId)
                                <div class="form-body">
                                    @Html.LabelFor(model => model.CityName)

                                    @Html.EditorFor(model => model.CityName, new { htmlAttributes = new { @tabindex = "1", @class = "form-control" } })

                                    @Html.ValidationMessageFor(model => model.CityName, "", new { @class = "text-danger" })
                                </div>




                            </div>


                        </div>
                        <div class="form-actions">
                            <button type="submit" tabindex="2" class="btn blue">
                                Kaydet
                            </button>
                            <button type="button" tabindex="3" class="btn default" onclick="window.location='@Url.Action("Index","City")';">
                                İptal
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
