
@model KariyerPortali.Admin.ViewModels.CityFormViewModel
@{
    ViewBag.Title = "Create";
}
<!DOCTYPE html>


<!--<![endif]-->
<!-- BEGIN HEAD -->
<br />
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index","City")" class="nav-link ">Tanımlamalar</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Yeni Şehir</span>
            </li>
        </ul>

    </div>
 <br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <h1 class="page-title">
                        Yeni Şehir
                    </h1>
                    </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">

                            <div class="form-group">
                                @Html.LabelFor(model => model.CityName)
                                @Html.EditorFor(model => model.CityName, new { htmlAttributes = new { @tabindex = "1", @class = "form-control spinner" ,autofocus="autofocus"} })
                                @Html.ValidationMessageFor(model => model.CityName, "", new { @class = "text-danger" })
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => model.CountryId)
                                @Html.DropDownList("CountryId", null, new { @tabindex = "2", @class = "form-control", autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.CountryId, "", new { @class = "text-danger" })

                            </div>

                           
                            
                        </div>
                        <div class="form-actions">
                            <button type="submit" tabindex="3" class="btn blue">
                                Kaydet
                            </button>
                            <button type="button" tabindex="4" class="btn default" onclick="window.location='@Url.Action("Index","City")';">
                                İptal
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
 
}
    <!-- END SAMPLE FORM PORTLET-->
    <!-- BEGIN SAMPLE FORM PORTLET-->
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



