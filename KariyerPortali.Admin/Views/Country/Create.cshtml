@model KariyerPortali.Admin.ViewModels.CountryFormViewModel
@{
    ViewBag.Title = "Create";
}

<link href="/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Country")" class="nav-link">Tanımlamalar</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Yeni Ülke</span>
            </li>
        </ul>

    </div>
    <br />
    <div class="row">
        <div class="col-md-12 ">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-title">
                    <h1 class="page-title">
                        Yeni Ülke
                    </h1>

                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">
                            <div class="form-group">
                                @Html.LabelFor(model => model.CountryName)
                                @Html.EditorFor(model => model.CountryName, new { htmlAttributes = new { @tabindex = "1", @class = "form-control spinner" } })
                                @Html.ValidationMessageFor(model => model.CountryName, "", new { @class = "text-danger" })
                            </div>

                           

                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn blue">Ekle</button>
                            <button type="button" class="btn default" onclick="window.location='@Url.Action("Index","Country")';">İptal</button>
                        </div>
                    </form>
                </div>
}
            </div>
        </div>

    </div>
    <!-- END SAMPLE FORM PORTLET-->
    <!-- BEGIN SAMPLE FORM PORTLET-->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
