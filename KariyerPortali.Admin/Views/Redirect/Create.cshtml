
@model KariyerPortali.Admin.ViewModels.RedirectFormViewModel
@{
    ViewBag.Title = "Create";
}

<link href="/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
<script src="/Scripts/generate-slug.js"></script>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index", "Redirect")" class="nav-link">Yönlendirmeler</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Yeni Yönlendirme</span>
        </li>
    </ul>

</div>
<br />
<div class="row">
    <div class="col-md-12 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <h1 class="page-title">
                    Yeni Yönlendirme
                </h1>

            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">
                            <div class="form-group">
                                @Html.LabelFor(model => model.RedirectName)
                                @Html.EditorFor(model => model.RedirectName, new { htmlAttributes = new { @tabindex = "1", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.RedirectName, " ", new { @class = "text-danger" })


                            </div>
                      
                            <div class="form-group">
                                @Html.LabelFor(model => model.OldUrl)
                                @Html.EditorFor(model => model.OldUrl, new { htmlAttributes = new { @tabindex = "2", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.OldUrl, " ", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.NewUrl)
                                @Html.EditorFor(model => model.NewUrl, new { htmlAttributes = new { @tabindex = "3", @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.NewUrl, " ", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.RedirectType)  
                                <br />                           
                                Kalıcı:   @Html.RadioButtonFor(model => model.RedirectType, "Permanent ")
                                Geçici:   @Html.RadioButtonFor(model => model.RedirectType, " Temporary")
                            
                            
                  

                               
</div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn blue">Ekle</button>
                            <button type="button" class="btn default" onclick="window.location='@Url.Action("Index","Redirect")';">İptal</button>
                        </div>
                    </form>
                </div>
            }
        </div>
    </div>

</div>
<!-- END SAMPLE FORM PORTLET-->
<!-- BEGIN SAMPLE FORM PORTLET-->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
