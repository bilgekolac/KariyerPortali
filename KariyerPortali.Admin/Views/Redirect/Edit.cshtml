@model KariyerPortali.Admin.ViewModels.RedirectViewModel
@{
    ViewBag.Title = "Edit";
}
<br />

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            @Html.ActionLink("Ayarlar", "Index", "Redirect")
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Yönlendirme Düzenle</span>
        </li>
    </ul>
    <div class="page-toolbar">
        <div id="dashboard-report-range" class="pull-right tooltips btn btn-sm" data-container="body" data-placement="bottom" data-original-title="Change dashboard date range">

        </div>
    </div>
</div>

@{
    ViewBag.Title = "Edit";
}
<br />
<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Yönlendirme Düzenle </span>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    </div>
                </div>
                <div class="row">
                    @using (Html.BeginForm("Edit", "Redirect", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()



                        <div class="actions">
                        </div>

                        <div class="portlet-body form">


                            <form role="form">
                                <div class="form-body">

                                    <div class="form-group">

                                        @Html.HiddenFor(model => model.RedirectId)
                                      
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.RedirectName)
                                                    @Html.EditorFor(model => model.RedirectName, new { htmlAttributes = new { @tabindex = "1", @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.RedirectName, " ", new { @class = "text-danger" })


                                                </div>

                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.OldUrl)
                                                    @Html.EditorFor(model => model.OldUrl, new { htmlAttributes = new { @tabindex = "2", @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.OldUrl, " ", new { @class = "text-danger" })
                                                </div>
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.NewUrl)
                                                    @Html.EditorFor(model => model.NewUrl, new { htmlAttributes = new { @tabindex = "3", @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.NewUrl, " ", new { @class = "text-danger" })
                                                </div>
                                                <div class="form-group">
                                                    @*@Html.LabelFor(model => model.RedirectType)
            @Html.EditorFor(model => model.RedirectType, new { htmlAttributes = new { @tabindex = "", @class = "form-control spinner" } })
            @Html.ValidationMessageFor(model => model.RedirectType, "", new { @class = "text-danger" })*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-actions right">
                                        <button type="submit" class="btn blue">Kaydet</button>
                                        <button type="button" class="btn default" onclick="window.location='@Url.Action("Index","Redirect")';">İptal</button>
                                    </div>


                                </div>
                            </form>
                        </div>
                    }
                </div>



            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<!-- END SAMPLE FORM PORTLET-->