@model KariyerPortali.Admin.ViewModels.DepartmentViewModel
@{
    ViewBag.Title = "Bölüm Ekle";
}
<br />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Department")">Bölümler</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Düzenle</span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />
<h1 class="page-title">
    <small></small>
</h1>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6 ">
            <div class="portlet light bordered" style="
    width: 442px;">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">
                            BÖLÜM DÜZENLE
                        </span>
                    </div>
                </div>
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">
                             <div class="form-group">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.DepartmentId)
                                <div class="form-body">
                                    @Html.LabelFor(model => model.DepartmentName)
                                    @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @tabindex = "1", @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
                                </div>
                             </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" tabindex="2" class="btn blue">Kaydet</button>
                            <button type="button" tabindex="3" class="btn default" onclick="window.location='@Url.Action("Index","Department")';">
                                İptal
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
