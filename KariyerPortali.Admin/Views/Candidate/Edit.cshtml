@model KariyerPortali.Admin.ViewModels.CandidateFormViewModel
@{
    ViewBag.Title = "Edit";
}
<br />

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            @Html.ActionLink("Adaylar", "Index", "Candidate")
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Yeni Adaylar</span>
        </li>
    </ul>
    <div class="page-toolbar">
        <div id="dashboard-report-range" class="pull-right tooltips btn btn-sm" data-container="body" data-placement="bottom" data-original-title="Change dashboard date range">

        </div>
    </div>
</div>

@{
    ViewBag.Title = "Edit";
}
<br />
<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
    <div class="caption font-dark">
        <i class="icon-settings font-dark"></i>
        <span class="caption-subject bold uppercase"> Adayı Düzenle </span>
    </div>
    <div class="row">
        <div class="col-md-12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="row">
    @using (Html.BeginForm("Edit", "Candidate", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
                    @Html.AntiForgeryToken()



                    <div class="actions">
        </div>

                    <div class="portlet-body form">


                        <form role="form">
                            <div class="form-body">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.UserName)
                                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @tabindex = "1", @class = "form-control spinner" } })
                                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.FirstName)
                                                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @tabindex = "3", @class = "form-control spinner" } })
                                                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.LastName)
                                                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @tabindex = "7", @class = "form-control spinner" } })
                                                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Email)
                                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @tabindex = "5", @class = "form-control spinner" } })
                                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Phone)
                                                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @tabindex = "2", @class = "form-control spinner" } })
                                                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.BirthDate)
                                                @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @tabindex = "4", @class = "form-control spinner" } })
                                                @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.Photo,htmlAttributes: new { @class = "control-label col-md-2" })
                                                <input type="file" id="Photo" name="upload" />
                                                @Html.ValidationMessageFor(model => model.Photo, "", new { @class = " text-danger " })
                                            
                                                    </div>
                                     
                                        <div class="form-group ">
                                            <img src="..." width="200" height="200" alt="Kişi Resmi" title="Kişi Resmi" />
                                        </div>

                                            <div class="form-group">
                                                @Html.LabelFor(model => model.State)                    
                                                    <div class="checkbox">
                                                        @Html.EditorFor(model => model.State, new { htmlAttributes = new { @tabindex = "8", @class = "form-control spinner" } })
                                                        @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                                                    </div>
                                                   
                                                </div>
                                          </div>
                                    </div>
                                </div>
                                <div class="form-actions right">
                                    <button type="submit" class="btn blue">Kaydet</button>
                                    <button type="button" class="btn default">İptal</button>
                                </div>


                            </div>
                        </form>
                    </div>
    }
                </div>


    
            </div>
            </div>
        </div>
        </div>
      
      
      

<!-- END SAMPLE FORM PORTLET-->