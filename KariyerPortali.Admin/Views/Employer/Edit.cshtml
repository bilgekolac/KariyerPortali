@model KariyerPortali.Admin.ViewModels.EmployerViewModel
@{
    ViewBag.Title = "Edit";
}

<!-- BEGIN CONTENT BODY -->
<!-- BEGIN PAGE HEADER-->
<!-- BEGIN THEME PANEL -->
<!-- END THEME PANEL -->
<!-- BEGIN PAGE BAR -->

<br />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Employer")">Tüm İşverenler</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Düzenle</span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />
<!-- END PAGE BAR -->
<!-- BEGIN PAGE TITLE-->
<h1 class="page-title">
    <small></small>
</h1>
<!-- END PAGE TITLE-->
<!-- END PAGE HEADER-->
@using (Html.BeginForm("Edit", "Employer", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6 ">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light bordered" style="width:442px;">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">
                           İşveren Düzenle
                        </span>
                    </div>

                </div>
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.EmployerId)
                            @Html.HiddenFor(model => model.CreateDate)
                            @Html.HiddenFor(model => model.CreatedBy)
                            @Html.HiddenFor(model => model.UpdateDate)
                            @Html.HiddenFor(model => model.UpdatedBy)
                            <div class="form-group">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.Logo)
                                @Html.LabelFor(model => model.Logo, htmlAttributes: new { @class = "control-label col-md-2" })
                                <input type="file" id="Logo" name="upload" />
                                @Model.Logo
                                @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })

                                <div class="form-body">
                                    @Html.LabelFor(model => model.EmployerName)

                                    @Html.EditorFor(model => model.EmployerName, new { htmlAttributes = new { @tabindex = "1", @class = "form-control" } })

                                    @Html.ValidationMessageFor(model => model.EmployerName, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.UserName)
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @tabindex = "3", @class = "form-control spinner" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>

                         
                             
                                <div class="form-group">
                                    @Html.LabelFor(model => model.SectorId)
                                    @Html.DropDownList("SectorId", null, new { @tabindex = "5", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SectorId, "", new { @class = "text-danger" })

                                </div>

                              
                            
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CityId)
                                    @Html.DropDownList("CityId", null, new { @tabindex = "7", @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.CityId, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">

                                    @Html.LabelFor(model => model.Email)
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @tabindex = "2", @class = "form-control spinner" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Phone)
                                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @tabindex = "4", @class = "form-control spinner" } })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })


                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.WebSite)
                                    @Html.EditorFor(model => model.WebSite, new { htmlAttributes = new { @tabindex = "6", @class = "form-control spinner" } })
                                    @Html.ValidationMessageFor(model => model.WebSite, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Address)
                                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @tabindex = "8", @class = "form-control spinner" } })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })


                                </div>

                            </div>


                        </div>

                        <div class="form-actions">
                            <button type="submit" tabindex="2" class="btn blue">
                                Kaydet
                            </button>
                            <button type="button" tabindex="3" class="btn default" onclick="window.location='@Url.Action("Index","Employer")';">
                                İptal
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
