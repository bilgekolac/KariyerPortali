@using (Html.BeginForm(Html.BeginForm("Edit", "Employer", null, FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-6 ">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light bordered" style="
                 width 442px;
                 ">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase">
                           İşveren Düzenle
                        </span>
                    </div>

                </div>
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.EmployerId)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Logo, htmlAttributes: new { @class = "control-label col-md-2" })
                                <input type="file" id="Logo" name="upload" />
                                @Model.Logo
                                @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })

                                <div class="form-body">
                                    @Html.LabelFor(model => model.EmployerName)

                                    @Html.EditorFor(model => model.EmployerName, new { htmlAttributes = new { @tabindex = "1", @class = "form-control" } })

                                    @Html.ValidationMessageFor(model => model.EmployerName, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.UserName)
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @tabindex = "3", @class = "form-control spinner" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                </div>



                            </div>


                        </div>
                        <div class="form-actions">
                            <button type="submit" tabindex="2" class="btn blue">
                                Kaydet
                            </button>
                            <button type="button" tabindex="3" class="btn default" onclick="window.location='@Url.Action("Index","Employer")';">
                                İptal
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>

    </div>
}
@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
