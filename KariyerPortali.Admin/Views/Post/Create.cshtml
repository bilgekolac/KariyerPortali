@model KariyerPortali.Admin.ViewModels.PostFormViewModel

@{
    ViewBag.Title = "Yazı Oluştur";
}

<!-- BEGIN PAGE HEADER-->
<!-- BEGIN THEME PANEL -->
<!-- END THEME PANEL -->
<!-- BEGIN PAGE BAR -->
<script src="/Scripts/ckeditor/ckeditor.js"></script>
<script src="/Scripts/generate-slug.js"> </script>
<br />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Post")">Yazılar</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Yeni Yazı</span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />
<!-- END PAGE BAR -->
<!-- BEGIN PAGE TITLE-->
<h1 class="page-title">
    <small></small>
</h1>


<!-- END PAGE TITLE-->
<!-- END PAGE HEADER-->


<div class="row">
    <div class="col-md-6 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered" style="
    width: 1000px;
">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-black-sunglo"></i>
                    <span class="caption-subject bold uppercase">
                        YENİ YAZI EKLE
                    </span>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            <div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="portlet-body form">
                        <form role="form">
                            <div class="form-body">






                                <div class="form-group">


                                    @Html.LabelFor(model => model.Title)
                                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @tabindex = "1", @class = "form-control", autofocus = "autofocus" } })
                                    @Html.ValidationMessageFor(model => model.Title, " ", new { @class = "text-danger" })

                                  
                                </div>
                     
                                <div class="form-group">


                                    @Html.LabelFor(model => model.Slug)
                                    @Html.EditorFor(model => model.Slug, new { htmlAttributes = new { @tabindex = "2", @class = "form-control", autofocus = "autofocus" } })
                                    @Html.EditorFor(model => model.Slug, new { htmlAttributes = new { @tabindex = "2", @class = "form-control",@onblur="slug()" } })
                                    @Html.ValidationMessageFor(model => model.Slug, " ", new { @class = "text-danger" })
                                    
                                    
                                    
                                </div>



                                <div class="form-group">
                                    
                                        <br>
                                    @Html.LabelFor(model => model.Body)
                                    @Html.TextAreaFor(model => model.Body, new { htmlAttributes = new { @tabindex = "3", @cols = "80", @rows = "10", autofocus = "autofocus" } })
                                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                                        
                                        <script>
                                            CKEDITOR.replace('Body');
                                        </script>

                                   




                                    <div id="content2" style="display: none" data-sample="2">
                                        <p>The number of <code>change</code> events: <strong><span id="changes"></span></strong>.</p>
                                        <h3>Mirrored Content</h3>
                                        <!-- This <div>
                                        will be used to display the editor content.-->
                                        <div id="editorcontent2">
                                        </div>
                                    </div>
                                </div>
                            </div>





                            <div class="form-actions">
                                <button type="submit" tabindex="4" class="btn blue">
                                    Kaydet
                                </button>
                                <button type="button" tabindex="5" class="btn default" onclick="window.location='@Url.Action("Index","Post")';">
                                    İptal
                                </button>

                            </div>
                        </form>
                    </div>
                }
            </div>
        </div>


    </div>

</div>





@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
}
<div class="row ">

</div>