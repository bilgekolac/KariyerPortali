@{
    ViewBag.Title = "Tüm Yazılar";
}
<link href="/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />


<br />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="/Post"> Yazılar </a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span> Tüm Yazılar </span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />



<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <h1 class="page-title">
                    Tüm Yazılar
                </h1>
            </div>

            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="/Post/Create" id="sample_editable_1_new" class=" btn sbold green">
                                    Yeni Yazı Ekle
                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <button class="btn green  btn-outline dropdown-toggle" data-toggle="dropdown">
                                    Araçlar
                                    <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-print"></i> Yazdır
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-file-pdf-o"></i> PDF Olarak Kaydet
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            <i class="fa fa-file-excel-o"></i> Excel'e Aktar
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <table class="table table-striped table-bordered table-hover table-checkable order-column" id="allPostTable">
                <thead>
                    <tr>
                        <th>
                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                <input type="checkbox" class="group-checkable" data-set="#allPostTable .checkboxes" />
                                <span></span>
                            </label>
                        </th>
                        <th> Yazı ID</th>
                        <th> Başlık </th>
                        <th> Oluşturan Kişi </th>
                        <th> Oluşturulma Tarihi </th>
                        <th> Güncelleyen Kişi </th>
                        <th> Güncelleme Tarihi </th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="odd gradeX">
                        <td>
                            <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                <input type="checkbox" class="checkboxes" value="1" />
                                <span></span>
                            </label>
                        </td>
                        <td> Fotoğraf </td>
                        <td> Kateleyna </td>
                        <td> Katy </td>
                        <td> Perry </td>
                        <td>29.10.2016</td>
                        <td>
                            <div class="btn-group">
                                <button class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                                    Eylemler
                                    <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-left" role="menu">
                                    <li>
                                        <a href="javascript:;">
                                            <i class="icon-note"></i> Düzenle
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            <i class="icon-list"></i> Detaylar
                                        </a>
                                    </li>

                                    <li>
                                        <a href="javascript:;">
                                            <i class="icon-ban"></i> Sil
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>


                </tbody>

            </table>
        </div>
    </div>
</div>
@section footer {
    <script src="/assets/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="~/Scripts/pages/post-index.js"></script>
    <script>
        $(document).ready(function () {
            initTable1();
        });
    </script>
}
