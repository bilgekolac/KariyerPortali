@model KariyerPortali.Admin.ViewModels.FormFormViewModel
<!DOCTYPE html>
<meta charset="utf-8" />
<title>@ViewBag.Title-Kariyer Portalı</title>
<br />
<style>
    textarea {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Form")">Formlar</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Yeni Form</span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase"> Yenİ Form</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="col-md-12 ">
                        <!-- BEGIN SAMPLE FORM PORTLET-->
                        <div class="portlet light bordered">

                            <!--İLAN VERİLİŞ TARİHİ O AN ALINACAK-->



                            <div class="portlet-body form">

                                <div class="form-body">
                                    <div class="form-group">
                                        <text>Form İsmi Giriniz:</text>
                                        @Html.EditorFor(model => model.FormName, new { htmlAttributes = new { @tabindex = "1", @class = "form-control spinner", autofocus = "autofocus" } })
                                        @Html.ValidationMessageFor(model => model.FormName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <text>E-posta adresi giriniz:</text><br />
                                        <text>cc:</text>@Html.EditorFor(model => model.FormName, new { htmlAttributes = new { @tabindex = "2", @class = "form-control spinner", autofocus = "autofocus" } })
                                        @Html.ValidationMessageFor(model => model.FormName, "", new { @class = "text-danger" })
                                        <text>bcc:</text>@Html.EditorFor(model => model.FormName, new { htmlAttributes = new { @tabindex = "3", @class = "form-control spinner", autofocus = "autofocus" } })
                                        @Html.ValidationMessageFor(model => model.FormName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <text>Açıklama Giriniz:</text>
                                        @Html.TextAreaFor(model => model.Description, new { @tabindex = "4", @class = "form-control spinner", autofocus = "autofocus" })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        <text>Kapanış Mesajı Giriniz:</text>
                                        @Html.TextAreaFor(model => model.ClosingDescription, new { @tabindex = "5", @class = "form-control spinner", autofocus = "autofocus" })
                                        @Html.ValidationMessageFor(model => model.ClosingDescription, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input type="submit" />
                        <!-- END SAMPLE FORM PORTLET-->
                        <!-- BEGIN SAMPLE FORM PORTLET-->
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



